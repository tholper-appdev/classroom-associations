<h1>
  Edit enrollment #<%= @enrollment.id %>
</h1>

<hr>

<form action="/update_enrollment/<%= @enrollment.id %>" method="post">

  <div class="form-group">
    <label for="course_id">
      Course
    </label>

      <%= select_tag("course_id", options_from_collection_for_select(Course.all, :id, :title, @enrollment.try(:course_id)), :class => "form-control") %>
      or <a href="/courses/new">add a new course</a> first
  </div>

  <div class="form-group">
    <label for="student_id">
      Student
    </label>

    <%= select_tag("student_id", options_from_collection_for_select(Student.all, :id, :last_name, @enrollment.try(:student_id)), :class => "form-control") %>

    or <a href="/students/new">add a new student</a> first
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update enrollment
  </button>
</form>

<hr>

<a href="/enrollments">
  Go back
</a>
